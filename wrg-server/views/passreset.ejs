	text-shadow: #6374AB 2px 2px 2px;
 }
 .contentblock { margin: 0px 20px; }
 .results { border: 1px solid blue; padding:20px; margin-top:20px; min-height:50px; }
 .blue-bold { font-size:18px; font-weight:bold; color:blue; }

 /* example styles for validation form demo */
#passreset-form {
    background: url("form-fieldset.gif") repeat-x scroll left bottom #F8FDEF;
    border: 1px solid #DFDCDC;
    border-radius: 15px 15px 15px 15px;
    display: inline-block;
    margin-bottom: 30px;
    margin-left: 20px;
    margin-top: 10px;
    padding: 25px 50px 10px;
    width: 440px;
}

#passreset-form .fieldgroup {
    background: url("form-divider.gif") repeat-x scroll left top transparent;
    display: inline-block;
    padding: 8px 10px;
    width: 340px;
}

#passreset-form .fieldgroup label {
    float: left;
    padding: 15px 0 0;
    text-align: right;
    width: 110px;
}

#passreset-form .fieldgroup input, #passreset-form .fieldgroup textarea, #passreset-form .fieldgroup select {
    float: right;
    margin: 10px 0;
    height: 25px;
}

#passreset-form .submit {
    padding: 10px;
    width: 220px;
    height: 40px !important;
}

#passreset-form .fieldgroup label.error {
    color: #FB3A3A;
    display: inline-block;
    margin: 4px 0 5px 125px;
    padding: 0;
    text-align: left;
    width: 220px;
}
</style>

<script type="text/javascript">
(function($,W,D)
{
    var JQUERY4U = {};

    JQUERY4U.UTIL =
    {
        setupFormValidation: function()
        {           
            $("#passreset-form").validate({
                rules: {          
                  
                    password: {
                        required: true,
                        minlength: 8
                    },	
					confirm_password: {
						required: true,
						minlength: 8,
						equalTo: "#password"
					}
                },
                messages: {
                    firstname: "Please enter your firstname",
                    lastname: "Please enter your lastname",
                    password: {
                        required: "Please provide a password",
                        minlength: "Your password must be at least 8 characters long"
                    },
                    email: "Please enter a valid email address",
                    agree: "Please accept our policy"
                },
                submitHandler: function(form) {
                    form.submit();
                }
            });
        }
    }   
    $(D).ready(function($) {
        JQUERY4U.UTIL.setupFormValidation();
    });

})(jQuery, window, document);
</script>

</head>
<body>
<div id="page-wrap">
<div id="content">

<h1>WRG - Password recovery!!!</h1>

<form action="/pwd/reset" method="post" id="passreset-form" novalidate="novalidate">
    <h2>Password Reset</h2>
    <div id="form-content">
        <fieldset>           
            <div class="fieldgroup">
                <label for="password">Password</label>
                <input id="password" type="password" name="password">
            </div>
			<div class="fieldgroup">
				<label for="confirm_password">Confirm password</label>
				<input id="confirm_password" name="confirm_password" type="password" />
		  </div>
		  
		        <input type="hidden" name="val" value="<%= hash %>">
                <input type="hidden" name="id" value="<%= user_id %>">
            <div class="fieldgroup">               
                <input type="submit" value="Reset Password" class="submit">
            </div>
        </fieldset>
    </div>
        <div class="fieldgroup">
            <p>You do not want to be here? <a href="/localhost:7000">Get me out of here</a>.</p>
        </div>
</form>
</div>
</div>
</div> 
</body>
</html>